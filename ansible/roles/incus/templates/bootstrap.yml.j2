config:
  core.https_address: {{ hostvars[inventory_hostname].internal_host }}:8443
networks:
- name: incusbr0
  type: bridge
  config:
    ipv4.address: {{ incus.bridge.cidr }}
    ipv4.dhcp: false
    ipv4.nat: true
    # bridge.external_interfaces: {{ incus.bridge.external_interface.name }}.{{ incus.bridge.external_interface.vlan }}/{{ incus.bridge.external_interface.name }}/{{ incus.bridge.external_interface.vlan }}
    ipv6.address: none
storage_pools:
- name: incuslvm
  driver: lvm
  config:
    source: {{ incus.lvm.partition }}
cluster:
  enabled: true
  server_name: {{ inventory_hostname }}
  server_address: {{ hostvars[inventory_hostname].internal_host }}:8443